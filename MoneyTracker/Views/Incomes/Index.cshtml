@model IEnumerable<MoneyTracker.Models.Allocations.Income>

@{
    ViewBag.Title = "Index";
}

<h2>Incomes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromAccount.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recurrence.RecurrenceFrequencyEnum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IncomeSource.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromAccount.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Recurrence.RecurrenceFrequencyEnum)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IncomeSource.Name)
        </td>
        <td>
            <button type="submit" class="btn btn-primary btn-xs" title="Edit"
                    onclick="location.href='@Url.Action("Edit", "Incomes", new { id = item.Id })'">
                <span class="glyphicon glyphicon-edit"></span>
            </button>
            |
            <button type="submit" class="btn btn-primary btn-xs" title="Delete"
                    onclick="location.href='@Url.Action("Delete", "Incomes", new { id = item.Id })'">
                <span class="glyphicon glyphicon-remove"></span>
            </button>
        </td>
    </tr>
}

</table>
